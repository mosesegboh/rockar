    <global>
        <helpers>
            <peppermint_all>
                <class>Peppermint_All_Helper</class>
            </peppermint_all>
            <rockar_all>
                <rewrite>
                    <data>Peppermint_All_Helper_Data</data>
                </rewrite>
            </rockar_all>
        </helpers>

        <models>
            <core>
                <rewrite>
                    <email_template>Mage_Core_Model_Email_Template</email_template>
                </rewrite>
            </core>
        </models>
    </global>
