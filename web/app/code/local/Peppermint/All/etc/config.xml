                <location_icon_url>https://www.bmw.co.za/en/integration/dealer-locator.html</location_icon_url>
            </website>
        </design>
    </default>
    <websites>
        <bmw>
            <rockar_all>
                <configurator_link>
                    <url>https://configure.bmw.co.za/</url>
                </configurator_link>
            </rockar_all>
        </bmw>
    </websites>
</config>
