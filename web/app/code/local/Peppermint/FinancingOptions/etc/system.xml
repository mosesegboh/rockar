<config>
    <sections>
        <finance_overlay translate="label" module="financing_options">
            <groups>
                <balloon translate="label">
                    <label>Baloon Slider</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>68</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <slider_steps>
                            <label>Steps</label>
                            <comment>Please enter comma-separated values</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slider_steps>
                        <slider_default>
                            <label>Default step</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slider_default>
                    </fields>
                </balloon>
                <new_cars_api translate="label">
                    <fields>
                        <mapping_option translate="label">
                            <label>Vehicle Condition Mapping Option</label>
                            <comment><![CDATA[Use vehicle condition as well as cap code in finance mapping]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </mapping_option>
                    </fields>
                </new_cars_api>
            </groups>
        </finance_overlay>
    </sections>
</config>
